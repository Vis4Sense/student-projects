{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noUnusedLocals": false, // TODO revert to true
    "skipLibCheck": true,
    "strictPropertyInitialization": false, // TODO remove/revert to true
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "lib": ["es2022", "dom"],
    "target": "ES2018",
    "types": ["jest"]
  },
  "include": ["src/**/*"]
}
